<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.emeyva.firebasefirstlook.CreateJobCompany">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        app:srcCompat="@drawable/contempo3" />


    <Button
        android:id="@+id/setmylocation"
        android:layout_width="120dp"
        android:layout_height="40dp"

        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/my_button"
        android:text="Use my location!"
        android:textSize="11sp" />

    <Button
        android:id="@+id/createJobbtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_above="@+id/gobackbtn"

        android:layout_alignStart="@+id/linearLayout2"
        android:layout_marginBottom="16dp"
        android:background="@drawable/my_button"
        android:text="Create Job" />

    <TextView
        android:id="@+id/gobackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:text="Go Back"
        android:textColor="@color/colorButton" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etPosition"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_name"
            android:hint="Position"
            android:inputType="textPersonName"
            android:textAlignment="textStart"
            android:textColor="@color/colorButton"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etSalary"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_age"
            android:hint="Salary"
            android:inputType="textPersonName"
            android:textColor="@color/colorButton"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etLatitude"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="8dp"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_city"
            android:hint="latitude"
            android:inputType="textPersonName"
            android:textColor="@color/colorButton"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etLongitude"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_marginBottom="20dp"
            android:background="#11000000"
            android:drawableStart="@drawable/ic_action_country"
            android:hint="longitude"
            android:inputType="textPersonName"
            android:textColor="@color/colorButton"
            android:textColorHint="@color/colorHint"
            android:textSize="16sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/twitter" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/instagram" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/facebook" />
    </LinearLayout>
</RelativeLayout>
